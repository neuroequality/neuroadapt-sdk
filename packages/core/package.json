{
  "name": "@neuroadapt/core",
  "version": "1.1.0",
  "description": "Core sensory, cognitive, and preference management for NeuroAdapt SDK",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./preferences": {
      "types": "./dist/preferences/index.d.ts",
      "import": "./dist/preferences/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@vitest/coverage-v8": "^1.0.0",
    "jsdom": "^23.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "accessibility",
    "neurodiversity",
    "preferences",
    "sensory",
    "cognitive"
  ],
  "author": "NeuroAdapt Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neuroadapt/neuroadapt-sdk.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  }
}