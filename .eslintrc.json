{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "node": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "prefer-const": "error"
  },
  "ignorePatterns": [
    "**/*.ts",
    "**/*.tsx", 
    "**/*.d.ts",
    "dist/", 
    "build/", 
    "node_modules/", 
    "*.config.js", 
    "*.config.mjs"
  ]
} 